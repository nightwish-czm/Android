<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/tv_title"
        android:text="2.手机卡绑定"
        />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过绑定SIM卡："
        android:textSize="22dp"
        android:layout_marginTop="8dp"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下次重启如果发现更换SIM卡就会发送报警短信"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        />
    <Button 
        android:id="@+id/btn_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button"
        android:text="点击绑定/解绑SIM卡"
        android:drawableRight="@drawable/unlock"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/step_2"
            android:layout_centerInParent="true"
            />
        
        <TextView 
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_button"
            android:text="下一步"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableRight="@drawable/next"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:clickable="true"
            android:onClick="next"
            />
        
        <TextView 
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/selector_button"
            android:text="上一步"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableLeft="@drawable/pre"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:clickable="true"
            android:onClick="pre"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            >
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/presence_invisible"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/presence_online"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/presence_invisible"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/presence_invisible"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/presence_invisible"
                />
            
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
